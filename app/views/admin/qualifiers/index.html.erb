<h1>Qualifiers <%= link_to_if(is_admin?, 'Add New Qualifier', new_admin_qualifier_path, class: 'btn btn-primary pull-right'){} %></h1>
<p>Shown below are the qualifiers that can be assigned to a property listing.</p>
<%= render 'shared/alerts' %>
<table class="table table-bordered">
  <tr>
    <th width="5%">ID</th>
    <th>Value</th>
    <% if is_admin? %>
      <th width="10%">Action</th>
    <% end %>
  </tr>
  <% if @qualifiers.each do |qualifier| %>
    <tr>
      <td><%= qualifier.id %></td>
      <td><%= qualifier.value %></td>
      <% if is_admin? %>
        <td>
          <table width="100%">
            <tr>
              <td width="45%"><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_qualifier_path(qualifier), class: 'btn btn-primary btn-block' %></td>
              <td width="10%"></td>
              <td width="45%"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_qualifier_path(qualifier), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
            </tr>
          </table>
        </td>
      <% end %>
    </tr>
  <% end.empty? %>
    <tr>
      <td colspan="3">You have no qualifiers</td>
    </tr>
  <% end %>
</table>
<%= will_paginate @qualifiers, renderer: BootstrapPagination::Rails %>
